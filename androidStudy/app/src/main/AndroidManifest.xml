<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.wanghui.androidstudy"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.ChangeSystemUIActivity"/>
        <activity android:name=".ui.ScrollActivity"
            android:hardwareAccelerated="false"/>
        <activity android:name=".testrxjava.TestRxJavaActivity"/>
        <activity android:name=".interaction.MultiTouchActivity"/>
        <activity android:name=".media.VideoCaptureActivity"/>
    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
